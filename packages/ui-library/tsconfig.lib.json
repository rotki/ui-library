{
  "extends": [
    "@vue/tsconfig/tsconfig.dom.json",
    "@vue/tsconfig/tsconfig.lib.json"
  ],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.lib.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./*"]
    },
    "types": ["vite/client"],
    "verbatimModuleSyntax": false
  },
  "include": [
    "env.d.ts",
    "vue-shim.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.stories.ts",
    "vitest-globals.d.ts",
    "src/**/__tests__/**/*"
  ]
}
